<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
  <!-- Rolling file appender use for trace log -->
  <appender name="ROLLING" class="ch.qos.logback.core.rolling.RollingFileAppender">
    <file>logs/logFile-${HOSTNAME:-localhost}-${PID:-0}.log</file>
    <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
      <fileNamePattern>logs/logFile-${HOSTNAME:-localhost}-${PID:-0}.%d{yyyy-MM-dd_HH}.%i.log.gz</fileNamePattern>
      <maxFileSize>100MB</maxFileSize>
      <maxHistory>360</maxHistory>
      <totalSizeCap>2GB</totalSizeCap>
    </rollingPolicy>
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%X{requestId}] [%thread] %-5level %logger{36} -- %msg%n</pattern>
    </encoder>
  </appender>
  <!-- 1.  A single console appender -->
  <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
    <!-- switch encoder per profile -->
    <!-- <springProfile name="prod"> -->
    <!--   <!-1- JSON log with logback encoder -1-> -->
    <!--   <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder"> -->
    <!--     <providers> -->
    <!--       <timestamp /> -->
    <!--       <loggerName /> -->
    <!--       <logLevel /> -->
    <!--       <message /> -->
    <!--     </providers> -->
    <!--   </encoder> -->
    <!-- </springProfile> -->
    <!-- <springProfile name="!prod"> -->
    <!-- plain text, coloured, debug level -->
    <encoder>
      <pattern>%clr(%d{HH:mm:ss.SSS}) [%X{requestId}] {faint} %clr(%5p) %clr(${PID:- }){magenta} %clr(---){faint}
          %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n%wEx</pattern>
      <charset>utf8</charset>
    </encoder>
    <!-- </springProfile> -->
  </appender>
  <!-- 2.  Root logger -->
  <springProfile name="prod">
    <root level="trace">
      <appender-ref ref="ROLLING"/>
    </root>
    <root level="DEBUG">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>
  <springProfile name="!prod">
    <root level="trace">
      <appender-ref ref="ROLLING"/>
    </root>
    <root level="INFO">
      <appender-ref ref="CONSOLE"/>
    </root>
  </springProfile>
</configuration>
